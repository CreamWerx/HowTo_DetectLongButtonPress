<Window
    x:Class="HowTo_DetectLongButtonPress.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HowTo_DetectLongButtonPress"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="tbTest"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="30"
            MouseLeave="tbTest_MouseLeave"
            MouseLeftButtonDown="tbTest_MouseLeftButtonDown"
            MouseLeftButtonUp="tbTest_MouseLeftButtonUp"
            Text="Text Block" />
    </Grid>
</Window>
